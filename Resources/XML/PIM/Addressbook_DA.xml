<form label="Addresse bog"  xmlns="http://www.evolutility.com" >
	<data icon="contact.gif" entity="contact" entities="contacts" 
	dbcolumnlead="lastname" dbtable="EVOL_Contact" dborder="t.lastname,t.firstname" 
	splogin="EvoSP_Login @login, @password" 
	sppaging="EvoSP_PagedItem @SQLselect, @SQLtable, @SQLfrom, @SQLwhere, @SQLorderby, @SQLpk, @pageid, @pagesize"/>
	<panel label="Identity" width="62">
		<field type="text" label="Efternavn" maxlength="50" dbcolumn="Lastname" dbcolumnread="Lastname" required="1" cssclass="FieldMain" 
			   width="62" search="1" searchlist="1" searchadv="1"/>
		<field type="text" label="Fornavn" maxlength="50" dbcolumn="Firstname" dbcolumnread="Firstname" required="0" cssclass="FieldMain" 
			   width="38" search="2" searchlist="2" searchadv="2"/>
		<field type="text" label="Titel" maxlength="50" dbcolumn="JobTitle" dbcolumnread="JobTitle" required="0" 
			   width="62" search="0" searchlist="0" searchadv="1"/>
		<field type="text" label="Firma" maxlength="50" dbcolumn="Company" dbcolumnread="Company" 
			   width="38" search="4" searchlist="4" searchadv="1"/>
		<field type="email" label="email" maxlength="255" dbcolumn="emailaddress" dbcolumnread="emailaddress" 
			   width="100" search="1" searchlist="1" searchadv="1"/>
	</panel>
	<panel label="Kontakt Opl." width="38">
		<field type="text" label="Tlf. Arbejde" maxlength="20" dbcolumn="phone" dbcolumnread="phone" width="50" search="0" searchlist="0" searchadv="1"/>
		<field type="text" label="Tlf. Privat" maxlength="20" dbcolumn="phoneh" dbcolumnread="phoneh" width="50" search="0" searchlist="0" searchadv="1"/>
		<field type="text" label="Mobil" maxlength="20" dbcolumn="phonem" dbcolumnread="phonem" width="50" search="0" searchlist="0" searchadv="1"/>
		<field type="text" label="Fax" maxlength="20" dbcolumn="Fax" dbcolumnread="Fax" width="50" search="0" searchlist="0" searchadv="0"/>
		<field type="url" label="Hjemmeside" maxlength="255" dbcolumn="url" dbcolumnread="url" width="100" search="0" searchlist="0" searchadv="1"/>
	</panel>
	<panel label="Adresse" width="62">
		<field type="text" label="Adresse" labeledit="Address" labellist="Address" maxlength="150" dbcolumn="Addressline1" dbcolumnread="Addressline1" width="100" height="3" search="0" searchlist="0" searchadv="11"/>
		<field type="text" label="" labellist="Address line 2" maxlength="150" dbcolumn="Addressline2" dbcolumnread="Addressline2" width="100" height="3" search="0" searchlist="0" searchadv="11"/>
		<field type="text" label="By" maxlength="100" dbcolumn="City" dbcolumnread="City" 
			   width="62" search="13" searchlist="0" searchadv="1"/>
		<field type="text" label="State" maxlength="3" dbcolumn="State" dbcolumnread="State" 
			   width="15" search="0" searchlist="0" searchadv="14"/>
		<field type="text" label="Postnr" maxlength="12" dbcolumn="Zip" dbcolumnread="Zip" 
			   width="23" search="0" searchlist="0" searchadv="15"/>
		<field type="text" label="Land" maxlength="60" dbcolumn="Country" dbcolumnread="Country" width="100" search="0" searchlist="0" searchadv="15"/>
	</panel>
	<panel label="Div." width="38">
		<field type="lov" label="Kategori" dbcolumn="CategoryID" dbcolumnread="Category" width="70" dbtablelov="EVOL_ContactCategory" dborderlov="id" search="1" searchlist="1" searchadv="1"/>
		<field type="text" label="Custom 1" maxlength="250" dbcolumn="Custom1" dbcolumnread="Custom1" width="100" search="0" searchlist="0" searchadv="15"/>
		<field type="text" label="Custom 2" maxlength="250" dbcolumn="Custom2" dbcolumnread="Custom2" width="100" search="0" searchlist="0" searchadv="15"/>
		<field type="text" label="Custom 3" maxlength="250" dbcolumn="Custom3" dbcolumnread="Custom3" width="100" search="0" searchlist="0" searchadv="15"/>
	</panel>
	
	<queries label="Kontakter">
		<query label="Kontakter i San Francisco" dbwhere="t.City ='san francisco' " url="sfo"  name="sfo"/> 
		<query label="Kontakter med email" dbwhere="t.emailaddress&lt;&gt;'' " url="email"  name="email"/> 
		<query label="Kontakter med hjemmeside" dbwhere="t.url&lt;&gt;'' " url="web"  name="web"/> 		
	</queries> 
</form>
